{% extends twig_global.getParameter('extended_layout_admin') ? twig_global.getParameter('extended_layout_admin') : 'AdminBundle:Base:layout.html.twig' %}
{% form_theme form 'AdminBundle:Form:fields.html.twig' %}

{% block section %}places{% endblock %}
{% block content %}

    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        {{ 'place.new' | trans }}
        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="{{ path('admin_default_index') }}"> <i class="ion-home"></i>  {{ 'home' | trans }}</a></li>
        <li><a href="javascript:">{{ 'ticketing' | trans }}</a></li>
        <li><a href="{{ path('ticket_place_index') }}">{{ 'place' | trans }}</a></li>
        <li><a href="{{ path('ticket_place_new') }}">{{ 'new.singular' | trans }}</a></li>
      </ol>
    </section>
      
    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
            <div class="box box-info">
                <!-- form start -->
                {{ form_start(form, {
                        'action': path('ticket_place_new'), 
                        'method': 'post', 
                        'attr': {'class': 'form-horizontal form-row-seperated'}
                    }) }}
                    <div class="box-body">
                        {% include 'TicketBundle:Place:_form.html.twig'%}
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary btn-flat"><i class="ion-checkmark"></i> {{ 'save' | trans }}</button>
                            <a href="{{ path('ticket_place_index') }}" class="btn btn-default btn-flat">{{ 'cancel.singular' | trans }}</a>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </section>

{% endblock %}
