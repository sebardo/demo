{% extends twig_global.getParameter('extended_layout_admin') ? twig_global.getParameter('extended_layout_admin') : 'AdminBundle:Base:layout.html.twig' %}
{% set uniqid = uniqid() %}
{% block section %}shows{% endblock %}
{% block content %}

    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        {{ 'shows' | trans }}
        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="{{ path('admin_default_index') }}"> <i class="ion-home"></i>  {{ 'home' | trans }}</a></li>
        <li><a href="javascript:">{{ 'dashboard' | trans }}</a></li>
        <li><a href="{{ path('ticket_show_index') }}">{{ 'shows' | trans }}</a></li>
      </ol>
    </section>
      
      
    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
            
          {{ include ('CoreBundle:Base:alert.messages.html.twig') }}
            
          <div class="box">
            <div class="box-body">
                <div class="clearfix">
                    <div class="btn-group">
                        <a href="{{ path('ticket_show_new') }}" class="btn btn-success btn-flat">
                                {{ 'add.new'| trans }}<i class="ion-plus"></i>
                        </a>
                    </div>
                </div>                <table class="table table-striped table-bordered table-hover" id="{{ uniqid }}-table">
                    <thead>
                    <tr>                            
                        <th>Id</th>                            
                        <th>Date</th>                            
                        <th>Description</th>                        
                        <th></th>
                    </tr>
                    </thead>
                    <tbody></tbody>
                </table>
              </div>
          </div>
        </div>
      </div>
    </section>     
                
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    <script>
        var table_columns = [                        {
                            "mData": function (source) {
                                return '<a href="' + source.id + '">' + source.id + '</a>';
                            }
                        },                        {
                            "mData": function (source) {
                                var arrDate = source.date.date.split('.');
                                return arrDate[0];
                            }
                        },                        { "mData": "description" },                        {
                            "mData": function(source) {
                                return '<a href="' + source.id + '/edit" class="btn btn-primary btn-xs btn-flat"><i class="ion-compose"></i> {{ 'edit' | trans }}</a> ';
                            }
                        }        ];

        jQuery(document).ready(function() {
            TableManaged.init(
                '#{{ uniqid }}-table',
                '{{ url('ticket_show_listjson') }}',
                [],
                table_columns,
                '{{ url('admin_default_getdatatablesi18n', { language: app.request.locale }) }}');
        });
    </script>
    
{% endblock %}

