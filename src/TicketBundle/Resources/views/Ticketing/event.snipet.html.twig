<div class="item  col-xs-4 col-lg-4">
    <div class="thumbnail">
        <img class="group list-group-image" src="" alt="" />
        <div class="caption">
            <h4 class="group inner list-group-item-heading">
                {{ event.name }}
            </h4>
            <p class="group inner list-group-item-text">
                {{ event.description }}
            </p>
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <p class="lead">
                        {{ event.price }}
                    </p>
                </div>
                <div class="col-xs-12 col-md-6">
                    <a class="btn btn-success" href="{{ path('ticket_ticketing_event', {'slug': event.slug }) }}">Add to cart</a>
                </div>
            </div>
        </div>
    </div>
</div>